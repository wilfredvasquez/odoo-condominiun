<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree (list) view -->
    <record id="view_property_previous_debt_list" model="ir.ui.view">
        <field name="name">condominium_management.property_previous_debt.tree</field>
        <field name="model">condominium.property.previous.debt</field>
        <field name="arch" type="xml">
            <list>
                <field name="property_id"/>
                <field name="description"/>
                <field name="amount"/>
                <field name="period"/>
                <field name="paid"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_property_previous_debt_form" model="ir.ui.view">
        <field name="name">condominium_management.property_previous_debt.form</field>
        <field name="model">condominium.property.previous.debt</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_mark_as_paid" type="object" string="Mark as Paid" class="oe_highlight" invisible="paid"/>
                    <button name="action_mark_as_unpaid" type="object" string="Mark as Unpaid" class="oe_highlight" invisible="not paid"/>
                </header>
                <sheet>
                    <div class="oe_title mb24 mt24">
                        <h1>
                            <field options="{'line_breaks': False}" widget="text" class="text-break" name="description" default_focus="1" placeholder="e.g. Condominio"/>
                        </h1>
                    </div>
                    <group>
                        <group name="basic_info" string="Basic Information">
                            <field name="property_id" readonly="paid"/>
                            <field name="period" readonly="paid" />
                            <field name="amount" readonly="paid"/>
                            <field name="paid" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Search view -->
    <record id="view_property_previous_debt_search" model="ir.ui.view">
        <field name="name">condominium_management.property_previous_debt.search</field>
        <field name="model">condominium.property.previous.debt</field>
        <field name="arch" type="xml">
            <search>
                <field name="property_id"/>
                <field name="description"/>
                <separator/>
                <filter string="Paid" name="paid" domain="[('paid', '=', True)]"/>
                <filter string="Unpaid" name="unpaid" domain="[('paid', '=', False)]"/>
                <separator/>
                <group expand="0" name="group_by" string="Group By">
                    <filter name="group_property" string="Property" context="{'group_by': 'property_id'}"/>
                </group>
            </search>
        </field>
    </record>

   <!-- AcciÃ³n -->
    <record id="action_property_previous_debt" model="ir.actions.act_window">
        <field name="name">Property Previous Debt</field>
        <field name="res_model">condominium.property.previous.debt</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_property_previous_debt_search"/>
    </record>
</odoo>