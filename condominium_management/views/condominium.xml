<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree (list) view -->
    <record id="view_condominium_list" model="ir.ui.view">
        <field name="name">condominium_management.condominium.tree</field>
        <field name="model">condominium.condominium</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="code"/>
                <field name="admin_id"/>
                <field name="phone" />
                <field name="email" />
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_condominium_form" model="ir.ui.view">
        <field name="name">condominium_management.condominium.form</field>
        <field name="model">condominium.condominium</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    
                </header>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'avatar_128'}"/>
                    <div class="oe_title mb24 mt24">
                        <h1>
                            <field options="{'line_breaks': False}" widget="text" class="text-break" name="name" default_focus="1" placeholder="e.g. Condominio"/>
                        </h1>
                    </div>
                    <group>
                        <group name="contact_info" string="Contact Information">
                            <field name="rif"/>
                            <field name="address"/>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                        <group name="basic_info" string="Basic Information">
                            <field name="code"/>
                            <field name="admin_id"/>
                            <field name="active" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids"/>
                        </page>
                        <page string="Services">
                            <field name="service_ids" />
                        </page>
                        <page string="Employees">
                            <field name="employee_ids" />
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Search view -->
    <record id="view_condominium_search" model="ir.ui.view">
        <field name="name">condominium_management.condominium.search</field>
        <field name="model">condominium.condominium</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="admin_id"/>
                <field name="email"/>
            </search>
        </field>
    </record>

   <!-- AcciÃ³n -->
    <record id="action_condominium" model="ir.actions.act_window">
        <field name="name">Condominiums</field>
        <field name="res_model">condominium.condominium</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_condominium_search"/>
    </record>
</odoo>