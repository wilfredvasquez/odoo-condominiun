<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree (list) view -->
    <record id="view_property_charge_list" model="ir.ui.view">
        <field name="name">condominium_management.property_charge.tree</field>
        <field name="model">condominium.property.charge</field>
        <field name="arch" type="xml">
            <list>
                <field name="bill_id" />
                <field name="property_id"/>
                <field name="amount"/>
                <field name="due_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_property_charge_form" model="ir.ui.view">
        <field name="name">condominium_management.property_charge.form</field>
        <field name="model">condominium.property.charge</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_mark_as_paid" type="object" string="Mark as Paid" class="oe_highlight" invisible="state != 'unpaid'"/>
                    <field name="state" widget="statusbar"/> 
                </header>
                <sheet>
                    <div class="oe_title mb24 mt24">
                        <h1>
                            <field options="{'line_breaks': False}" widget="text" class="text-break" name="name" default_focus="1" placeholder="e.g. Condominio"/>
                        </h1>
                    </div>
                    <group>
                        <group name="basic_info" string="Basic Information">
                            <field name="bill_id" readonly="True"/>
                            <field name="property_id" readonly="True"/>
                            <field name="amount" readonly="True" />
                            <field name="due_date" readonly="True"/>
                            <field name="payment_date" readonly="True"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Charge Lines">
                            <field name="detail_lines" create="false" delete="false">
                                <list>
                                    <field name="description"/>
                                    <field name="amount" sum="Total Amount"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Search view -->
    <record id="view_property_charge_search" model="ir.ui.view">
        <field name="name">condominium_management.property_charge.search</field>
        <field name="model">condominium.property.charge</field>
        <field name="arch" type="xml">
            <search>
                <field name="bill_id"/>
                <field name="property_id"/>
                <separator/>
                <filter string="Pending" name="pending" domain="[('state', '=', 'pending')]"/>
                <filter string="Paid" name="paid" domain="[('state', '=', 'paid')]"/>
                <filter string="Overdue" name="overdue" domain="[('state', '=', 'overdue')]"/>
                <separator/>
                <group expand="0" name="group_by" string="Group By">
                    <filter name="group_bill" string="Bill" context="{'group_by': 'bill_id'}"/>
                    <filter name="group_property" string="Property" context="{'group_by': 'property_id'}"/>
                </group>
            </search>
        </field>
    </record>

   <!-- AcciÃ³n -->
    <record id="action_property_charge" model="ir.actions.act_window">
        <field name="name">Property Charge</field>
        <field name="res_model">condominium.property.charge</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_property_charge_search"/>
    </record>
</odoo>