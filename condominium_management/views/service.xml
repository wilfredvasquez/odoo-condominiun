<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree (list) view -->
    <record id="view_service_list" model="ir.ui.view">
        <field name="name">condominium_management.service.tree</field>
        <field name="model">condominium.service</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="description"/>
                <field name="default_amount"/>
                <field name="condominium_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_service_form" model="ir.ui.view">
        <field name="name">condominium_management.service.form</field>
        <field name="model">condominium.service</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title mb24 mt24">
                        <h1>
                            <field options="{'line_breaks': False}" widget="text" class="text-break" name="name" default_focus="1" placeholder="e.g. Condominio"/>
                        </h1>
                    </div>
                    <group>
                        <group name="basic_info" string="Basic Information">
                            <field name="description" />
                            <field name="default_amount" />
                            <field name="condominium_id" />
                            <field name="active" />
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Search view -->
    <record id="view_service_search" model="ir.ui.view">
        <field name="name">condominium_management.service.search</field>
        <field name="model">condominium.service</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="condominium_id"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Deactive" name="deactive" domain="[('active', '=', False)]"/>
                <separator/>
                <group expand="0" name="group_by" string="Group By">
                    <filter name="group_condominium" string="Condominium" context="{'group_by': 'condominium_id'}"/>
                </group>
            </search>
        </field>
    </record>

   <!-- AcciÃ³n -->
    <record id="action_service" model="ir.actions.act_window">
        <field name="name">Service</field>
        <field name="res_model">condominium.service</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_service_search"/>
    </record>
</odoo>