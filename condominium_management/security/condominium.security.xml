<odoo>
  <data>
    <!-- Condominium User Group -->
    <record id="condominium_management.group_user" model="res.groups">
      <field name="name">Condominium User</field>
      <field name="category_id" ref="base.module_category_condominium"/>
      <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>
    <!-- Condominium Manager Group -->
    <record id="condominium_management.group_manager" model="res.groups">
      <field name="name">Condominium Manager</field>
      <field name="category_id" ref="base.module_category_condominium"/>
      <field name="implied_ids" eval="[(4, ref('condominium_management.group_user'))]"/>
      <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
    <!-- Add Condominium User Group to default user template -->
    <record id="base.default_user" model="res.users">
      <field name="groups_id" eval="[(4, ref('condominium_management.group_user'))]"/>
    </record>
  </data>
</odoo>