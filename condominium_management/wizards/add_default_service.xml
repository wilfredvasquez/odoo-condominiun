<odoo>
    <record id="add_services_to_bill_wizard" model="ir.actions.act_window">
        <field name="name">Agregar Servicios</field>
        <field name="res_model">add.services.to.bill.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_bill_id': active_id}</field>
    </record>

    <!-- Vista del wizard con el botÃ³n -->
    <record id="view_add_services_to_bill_wizard_form" model="ir.ui.view">
        <field name="name">add.services.to.bill.wizard.form</field>
        <field name="model">add.services.to.bill.wizard</field>
        <field name="arch" type="xml">
            <form string="Agregar Servicios">
                <group>
                    <field name="bill_id" readonly="1"/>
                    <field name="service_ids"/>
                </group>
                <footer>
                    <button name="action_add_services" type="object" string="Agregar" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>